<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#858585"
        tools:context="com.example.sasha.finalsoftware.ui.MainActivity">


    <TextView
            android:layout_width="181dp"
            android:layout_height="112dp"
            android:id="@+id/textView2"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#333333"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_textView"
            app:layout_constraintHorizontal_bias="0.515"
            android:fontFamily="sans-serif-condensed-medium" />

    <Button
            android:text="View Saved Names"
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:id="@+id/ViewNames"
            android:onClick="switchToNamesListed"
            android:background="#333333"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/compButton" />

    <TextView
            android:text="Got Names?"
            android:layout_width="181dp"
            android:layout_height="112dp"
            android:id="@+id/title_textView"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#333333"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="sans-serif-condensed-medium" />

    <Button
            android:text="search, rate, and save names"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:id="@+id/searchButton"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:background="#333333"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/title_textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

    <Button
            android:text="COMPARE NAMES"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:id="@+id/compButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:background="#333333"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/searchButton" />

    <Button
            android:text="Sign Out"
            android:textColor="#ff0000"
            android:layout_width="171dp"
            android:layout_height="62dp"
            android:id="@+id/SignOut"
            app:layout_constraintTop_toBottomOf="@+id/ViewNames"
            android:layout_marginTop="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.933" />

</androidx.constraintlayout.widget.ConstraintLayout>
