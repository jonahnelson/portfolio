<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#858585">

    <TextView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/compareNameList2"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/compareResultName2disc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:textAlignment="viewStart"
            android:background="#ffffff" />

    <EditText
            android:layout_width="213dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/compareTitle"
            android:id="@+id/compareName1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:fontFamily="sans-serif-condensed-medium" />

    <TextView
            android:text="Name 2:"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/compareName2disc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/compareName1disc"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="sans-serif-condensed-medium" />

    <TextView
            android:text="Compare"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/compareTitle"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#333333"
            android:textColor="#ffffff"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium" />

    <TextView
            android:text="Name 1:"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/compareName1disc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/compareTitle"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="sans-serif-condensed-medium" />

    <EditText
            android:layout_width="213dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@+id/compareName1"
            android:id="@+id/compareName2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:fontFamily="sans-serif-condensed-medium" />

    <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/compareDate1"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/compareTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:hint="Min Year: 1880"
            android:fontFamily="sans-serif-condensed-medium" />

    <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/compareDate2"
            app:layout_constraintTop_toBottomOf="@+id/compareTitle"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Max Year: 2008"
            android:fontFamily="sans-serif-condensed-medium" />

    <ImageButton
            android:text="Compare Names"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/compareBtn"
            android:background="@drawable/ic_baseline_compare_arrows_24"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/compareTitle"
            android:layout_marginTop="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:onClick="updateGUI"
            />

    <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/compareResultName1disc"
            app:layout_constraintTop_toBottomOf="@+id/compareBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="sans-serif-condensed-medium" />

    <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/compareResultName2disc"
            app:layout_constraintTop_toBottomOf="@+id/compareBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="sans-serif-condensed-medium" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/compareNamePercentDiff"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/compareBtn"
            android:layout_marginTop="170dp"
            android:background="#333333" />

    <TextView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/compareNameList1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/compareResultName1disc"
            android:textAlignment="viewStart"
            android:background="#ffffff" />

</androidx.constraintlayout.widget.ConstraintLayout>
